<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/popupContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:scaleX="0.6"
        android:scaleY="0.6">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="@dimen/default_padding_big"
            android:background="@drawable/bg_circle">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/default_padding_big"
                android:background="@drawable/bg_circle_white" />

            <ImageView
                android:id="@+id/ivCancel"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_circle_dark"
                android:padding="@dimen/default_padding_big"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="@color/blue" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ivSetting"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_circle_white"
            android:padding="@dimen/default_padding_big"
            android:src="@drawable/ic_sync_black_24dp"
            android:tint="@color/orange" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/ivSetting"
            android:layout_marginStart="13dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/ivRemove"
            android:background="@drawable/bg_circle_white"
            android:padding="@dimen/default_padding_big"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="@color/yellow" />

        <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/ivShare"
            android:layout_below="@+id/ivRemove"
            android:layout_marginStart="37dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_circle_white"
            android:padding="@dimen/default_padding_big"
            android:src="@drawable/ic_settings_black_24dp"
            android:tint="@color/purple" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignEnd="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:background="@drawable/bg_circle_white"
            android:padding="@dimen/default_padding_big"
            android:rotation="180"
            android:src="@drawable/ic_share_black_24dp"
            android:tint="@color/green" />

        <ImageView
            android:id="@+id/ivRemove"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_alignTop="@+id/relativeLayout"
            android:background="@drawable/bg_circle_white"
            android:padding="@dimen/default_padding_big"
            android:rotation="180"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/red" />
    </RelativeLayout>
</RelativeLayout>